<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:background="#000000"
                android:alpha="0.2"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:paddingBottom="1dp"
                    android:layout_weight="8.8">
                    <FrameLayout
                        android:id="@+id/frame_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >
                    </FrameLayout>

                </LinearLayout>
                <!--<View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dark_grey"/>-->

                <LinearLayout
                    android:id="@+id/linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1.2">


                    <TextView
                        android:id="@+id/home_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:drawableTop="@drawable/ic_optionmenu_home"
                        android:textColor="@color/dark_text_color"
                        android:layout_height="match_parent"
                        android:text="SEARCH"/>

                    <TextView
                        android:id="@+id/worklist_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:drawableTop="@drawable/ic_optionmenu_worklist"
                        android:textColor="@color/dark_text_color"
                        android:layout_height="match_parent"
                        android:text="WORKLIST"/>

                    <TextView
                        android:id="@+id/profile_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:drawableTop="@drawable/ic_optionmenu_profile"
                        android:textColor="@color/dark_text_color"
                        android:layout_height="match_parent"
                        android:text="MY PROFILE"/>

                    <TextView
                        android:id="@+id/logout_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:drawableTop="@drawable/ic_optionmenu_logout"
                        android:textColor="@color/dark_text_color"
                        android:layout_height="match_parent"
                        android:text="LOGOUT"/>





                </LinearLayout>

            </LinearLayout>

            </FrameLayout>







    </LinearLayout>




</LinearLayout>